<!-- to render a particula book-->
@model Books
    <div class="container">
        <div class="row">
            <div class="col">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" >
                    <div class="carousel-inner">
                    <div class="carousel-item active" data-bs-interval="3000">
                            <img src="~/images/image1.jpg" class="d-block w-100" height="450" width="400" alt="...">
                        </div>
                    <div class="carousel-item" data-bs-interval="4000">
                        <img src="~/images/image2.jpg" class="d-block w-100" height="450" width="400" alt="...">
                        </div>
                    <div class="carousel-item" data-bs-interval="5000">
                        <img src="~/images/image3.jpg" class="d-block w-100" height="450" width="400" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="col ms-1">
                <h1>@Model.Title</h1>
                <p>@Model.Description</p>
            <div style="position:absolute;bottom:100px;margin:0px;padding:0px;">
                <button class="btn btn-outline-primary">Read Book</button>
                <span class="mx-3" style="float:right;"><i>By .</i><h3> @Model.Author</h3></span>
            </div>
            </div>
        </div>
    </div>
